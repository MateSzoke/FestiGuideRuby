<nav>
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to "Festivals", festival_bases_path, class: "breadcrumb" %>
      <a class="breadcrumb" href=""><%= @festival.name %></a>
    </div>
  </div>
</nav>

<div class="center">
  <%= image_tag @festival.imgSrc, :style => "height: 200px; margin-top: 20px" %>
</div>

<div class="center"><b><%= @festival.stage %></b>

  <table class="striped">
    <thead>
    <tr class="td">
      <% @days.each do |day| %>
        <th><%= l day.date, format: :date %></th>
      <% end %>
    </tr>
    </thead>

    <tbody>

    <% @days.each do |day| %>
      <tr style="display: table-cell">
        <% @shows.each do |show| %>
          <% if show.day_id == day.id %>
            <td style="display: block"><%= "#{show.performer} #{show.time}" %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>

    </tbody>
  </table>

  <div class="center">
    <%= link_to "Edit", edit_festival_basis_path, class: "waves-effect waves-light btn-large" %>
    <div class="waves-effect"><%= button_to 'DELETE', {controller: :festival_bases, action: :destroy, id: @festival.id}, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn-large background black" %></div>
  </div>
</div>