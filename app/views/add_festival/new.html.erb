<div class="row">
  <form class="col s6">
    <div class="row">
      <div class="input-field col m6">
        <input class="validate" id="festival_name" placeholder="Festival name" type="text">
        <label for="festival_name"></label>
      </div>
    </div>
    <div class="row">
      <div class="input col m6">
        <input class="datepicker" type="text" value="From date">
      </div>
      <div class="datepicker-calendar-container col m6">
        <input class="datepicker" type="text" value="End date">
      </div>
    </div>
    <div class="row">
      <div class="input-field col m6">
        <input class="validate" id="stage_name" placeholder="Stage" type="text">
        <label for="stage_name"></label>
      </div>
    </div>
  </form>
  <form action="#" class="col s6">
    <div class="file-field input-field">
      <div class="btn">
        <span>Browse image</span>
        <input type="file">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
    <div class="card-image">
      <img src="https://www.programturizmus.hu/media/image/big/ajanlat/kultura/koncert-zene/popzene/29/7592-nagyon-zene-fesztival.jpg">
    </div>
  </form>
</div>

<div class="center">
  <%= link_to "Cancel", festivals_index_path, class: "waves-effect btn-large background transparent", style: "color: #5a5a5a" %>
  <%= link_to "Next", add_festival_stage_path, class: "waves-effect waves-light btn-large" %>
</div>